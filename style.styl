@import "normalize.styl"
@import "fonts.styl"

a
	text-decoration none
	color #333
		
body
	background #737373
	font-family texgyreherosregular
	font-size 16px
	max-width 1024px

header
	margin-left 4em

h1
	margin-top 0
		
li
	position relative
	list-style-type none
	line-height 2em

figure
	display inline
span
	color #58595C

.relative
	position relative
.borde
	background #8CD3D0
	a
		padding 0.5em
.portada
	background #B9E1E0
	display inline-block
	padding 0 0 1em 5em

.avatar
	border solid 5px #8CD3D0
	border-radius 50%
	display inline-block
	max-width 150px
	
.extracto
	display inline-block
	font-family texgyreherositalic
	padding 0 5em
	max-width 50%
	vertical-align 2em

.col1
	display inline-block
		
.col2
	display inline-block
	position relative
	right -15em
	p
		margin 0
		padding 0.3em 1em

.cont-principal
	position relative
.contenedor1
	display inline-block
	position absolute
	bottom 0
	top 0
	left 0
	width 68%

.contenedor2
	display inline-block
	position absolute
	bottom 0
	height 100%
	right 0
	top 0
	width 32%

.informacion
	background #D9EBEB
	margin-left 4em
	margin-top 0
	padding 1em 5em
	position relative
			
.ico-barra
	color #E6E6E6
	left -1.7em
	position absolute
	font-size 1.8em
	top 1em
			
.ico-body
	color #333
	margin 0
	padding 0.5em 1em

.ico-list
	color #333
	display inline-block
	font-size 1.2em
	margin 0
	padding 0.3em 0.5em 0 0
	vertical-align top

.box
	background #F4F4F4
	margin-left 4em
	margin-top 0
	padding 1em 1em 0 0
	position relative

.box-title
	background #D9D9D9
	h2
		margin 0
		padding 0.3em 1em

.box-body
	background #E6E6E6
	padding 0.8em 0.8em 0.8em 1.5em

.item
	background #D9D9D9
	margin-bottom 0.8em
	padding 1em 1em 0.3em 1em
	position relative
	&:last-child
		margin-bottom 0
	p
		margin 0

.item-title
	display inline-block
	font-family texgyreherosbold
	padding-bottom 0.5em

.item-date
	position absolute
	right 1em
	text-align right
	top 1em
	&:nth-child(odd)
		top 5em
	
.item-content
	color #58595C

.separador
	border solid 1px #BFBFBF
	border-top-style none
	margin 0.3em 0
.ver-mas
	display block
	text-align right
.side
	background #F4F4F4
	margin 0
	padding 1em 0 0 0

.side-list
	margin 0 1em 2em 0
	display inline-block
	padding 0
	left 4em
.side-title
	padding 0.9em 0
	font-family texgyreherosbold
.barra
	display table-cell
	padding 0 0.7em
	margin 0
	color #E6E6E6

.pasado
	background #BFBFBF
	border solid 1px #BFBFBF
.actual
	background #333
	boder solid 1px #333
.proximo
	background #E6E6E6
	border solid 1px #737373
	border-left-style none
.primero
	border-radius 5px 0 0 5px
.ultimo
	border-radius 0 5px 5px 0
.centrar
	text-align center
	&:last-child
		margin-bottom 0.25em
.oculto
	display none
